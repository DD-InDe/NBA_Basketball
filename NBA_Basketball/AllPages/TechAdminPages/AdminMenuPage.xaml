<Page x:Class="NBA_Basketball.AllPages.TechAdminPages.AdminMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:NBA_Basketball.AllPages.TechAdminPages"
      mc:Ignorable="d"
      Title="Technical Administrator menu" Height="auto" Width="700">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource DescriptionTextBlock}" Width="500" Margin="30"
                       Text="Welcome to use this system, you can click the buttons below to navigate to the corresponding page">
            </TextBlock>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button Margin="10" x:Name="ExecutionsButton" Click="ExecutionsButton_OnClick" Width="200"
                            Style="{StaticResource MainButton}" Content="Manage Executions" />
                    <Button Margin="10" x:Name="TeamReport" Click="TeamReport_OnClick" Width="200"
                            Style="{StaticResource MainButton}" Content="Team Report" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
