<Page x:Class="NBA_Basketball.AllPages.VisitorsPages.TeamsMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:NBA_Basketball.AllPages.VisitorsPages"
      mc:Ignorable="d"
      Loaded="TeamsMainPage_OnLoaded"
      Title="Teams Main" Height="auto" Width="auto">
    <Grid>
        <TabControl x:Name="Conferences" Margin="20">
            <!-- eastern -->
            <TabItem x:Name="EasternItems">
                <TabItem.Header>
                    <TextBlock Style="{StaticResource DescriptionTextBlock}" Text="Eastern" />
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Orientation="Horizontal">
                        <!-- atlantic -->
                        <StackPanel Orientation="Vertical">
                            <TextBlock Style="{StaticResource HeaderTextBlock}" Text="Atlantic" />
                            <ListView x:Name="AtlanticTeamsListView" Height="350" Width="300">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="60" Height="60" Source="{Binding LogoImage}"
                                                   MouseLeftButtonDown="UIElement_OnMouseLeftButtonDown" />
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Style="{StaticResource DescriptionTextBlock}"
                                                           Text="{Binding TeamName}" />
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Style="{StaticResource MainTextBlock}"
                                                               Foreground="#6996c2" MouseLeftButtonDown="Hyperlink_OnMouseLeftButtonDown" Text="Roster"/>
                                                    <TextBlock Style="{StaticResource MainTextBlock}"
                                                               Foreground="#6996c2" MouseLeftButtonDown="Hyperlink_OnMouseLeftButtonDown" Text="Matchup"/>
                                                    <TextBlock Style="{StaticResource MainTextBlock}"
                                                               Foreground="#6996c2" MouseLeftButtonDown="Hyperlink_OnMouseLeftButtonDown" Text="Lineup"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                        <!-- central -->
                        <StackPanel Orientation="Vertical">
                            <TextBlock Style="{StaticResource HeaderTextBlock}" Text="Central" />
                            <ListView x:Name="CentralTeamsListView" Height="350" Width="300">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="60" Height="60" Source="{Binding LogoImage}"
                                                   MouseLeftButtonDown="UIElement_OnMouseLeftButtonDown" />
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Style="{StaticResource DescriptionTextBlock}"
                                                           Text="{Binding TeamName}" />
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Style="{StaticResource MainTextBlock}"
                                                               Foreground="#6996c2" MouseLeftButtonDown="Hyperlink_OnMouseLeftButtonDown" Text="Roster"/>
                                                    <TextBlock Style="{StaticResource MainTextBlock}"
                                                               Foreground="#6996c2" MouseLeftButtonDown="Hyperlink_OnMouseLeftButtonDown" Text="Matchup"/>
                                                    <TextBlock Style="{StaticResource MainTextBlock}"
                                                               Foreground="#6996c2" MouseLeftButtonDown="Hyperlink_OnMouseLeftButtonDown" Text="Lineup"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                        <!-- southeast -->
                        <StackPanel Orientation="Vertical">
                            <TextBlock Style="{StaticResource HeaderTextBlock}" Text="Southeast" />
