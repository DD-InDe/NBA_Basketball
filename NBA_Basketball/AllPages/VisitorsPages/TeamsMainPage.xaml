                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Style="{StaticResource MainTextBlock}"
                                                               Foreground="#6996c2" MouseLeftButtonDown="Hyperlink_OnMouseLeftButtonDown" Text="Roster"/>
                                                    <TextBlock Style="{StaticResource MainTextBlock}"
                                                               Foreground="#6996c2" MouseLeftButtonDown="Hyperlink_OnMouseLeftButtonDown" Text="Matchup"/>
                                                    <TextBlock Style="{StaticResource MainTextBlock}"
                                                               Foreground="#6996c2" MouseLeftButtonDown="Hyperlink_OnMouseLeftButtonDown" Text="Lineup"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
            <!-- western -->
            <TabItem x:Name="WesternItems">
                <TabItem.Header>
                    <TextBlock Style="{StaticResource DescriptionTextBlock}" Text="Western" />
