<Page x:Class="NBA_Basketball.AllPages.VisitorsPages.VisitorMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:NBA_Basketball.AllPages.VisitorsPages"
      mc:Ignorable="d"
      Title="Visitor Menu" Height="auto" Width="auto">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <Button x:Name="TeamsButton" Click="TeamsButton_OnClick" Style="{StaticResource MainButton}" Width="150" Margin="0,0,30,30" Content="Teams"/>
                <Button x:Name="MatchupsButton" Style="{StaticResource MainButton}" Width="150" Margin="0,30,30,0" Content="Matchups"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Button x:Name="PlayersButton" Style="{StaticResource MainButton}" Width="150" Margin="30,0,0,30" Content="Players"/>
                <Button x:Name="PhotosButton" Style="{StaticResource MainButton}" Width="150" Margin="30,30,0,0" Content="Photos"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>